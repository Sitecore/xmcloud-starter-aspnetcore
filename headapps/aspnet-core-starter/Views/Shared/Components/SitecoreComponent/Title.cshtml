@model Sitecore.AspNetCore.Starter.Models.Title

<div class="component title @Model.Styles" id="@Model.Id">
    <div class="component-content">
        <div class="field-title">
            @if (Model.IsEditing)
            {
                <sc-text asp-for="@Model.Text"></sc-text>
            }
            else
            {
                <sc-link asp-for="@Model.Link">
                    <sc-text asp-for="@Model.Text"></sc-text>
                </sc-link>
            }
        </div>
    </div>
</div>