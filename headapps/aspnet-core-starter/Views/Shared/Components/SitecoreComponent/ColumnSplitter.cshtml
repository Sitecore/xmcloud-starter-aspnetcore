@model Sitecore.AspNetCore.Starter.Models.ColumnSplitter

<div class="row component column-splitter @Model.Styles @Model.GridParameters" id="@Model.Id">
    @foreach (var enabledParameterId in Model.EnabledPlaceholderIds)
    {
        var key = $"column-{enabledParameterId}-{{*}}";
        var styles = $"{Model.ColumnWidths[enabledParameterId - 1]} {Model.ColumnStyles[enabledParameterId - 1]}";
        <div class="@styles">
            <div class="row">
                <sc-placeholder name="@key"></sc-placeholder>
            </div>
        </div>
    }
</div>