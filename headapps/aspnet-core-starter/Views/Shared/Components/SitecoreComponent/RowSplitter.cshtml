@model Sitecore.AspNetCore.Starter.Models.RowSplitter

<div class="component row-splitter @Model.Styles @Model.GridParameters" id="@Model.Id">
    @foreach (var enabledParameterId in Model.EnabledPlaceholderIds)
    {
        var key = $"row-{enabledParameterId}-{{*}}";
        var styles = $"{Model.ColumnStyles[enabledParameterId - 1]}";

        <div class="container-fluid @styles">
            <div>
                <div class="row">
                    <sc-placeholder name="@key"></sc-placeholder>
                </div>
            </div>
        </div>
    }
</div>